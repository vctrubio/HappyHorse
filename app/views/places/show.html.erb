<div class="map" style="background-image: url(/assets/bcn.jpg)"></div>

<div class="container margin-top-negative">
  <div class="row">
    <div class="col-8">
      <div class="flat-show-card">
        <h1><%= @place.name %></h1>
        <p class="flat-show-address"><%= @place.address %></p>
      </div>
      <div class="flat-show-card">
        <h3><%= @place.phone %></h3>
        <p><%= @place.category %></p>
        <div class="map" style="background-image: url()"></div>
      </div>
    </div>

    <div class="col-4">
      <div class="flat-show-card">
        <h5>Book this place!</h5>

        <form action="">
          <div class="input-group">
            <span class="input-group-addon" id="basic-addon1">From:</span>
            <input type="text" class="form-control" placeholder="12/10/2017" aria-label="Username" aria-describedby="basic-addon1">
          </div>
          <div class="input-group mt-2">
            <span class="input-group-addon" id="basic-addon1">To:</span>
            <input type="text" class="form-control" placeholder="18/10/2017" aria-label="Username" aria-describedby="basic-addon1">
          </div>
          <input type="submit" value="Book" class="btn btn-success mt-2" style="width: 100%">
        </form>
      </div>
      <div class="flat-show-card">
        <h3>Details</h3>
        <div class="flex">
          <div class="flex">
            <i class="material-icons mr-2">Workshops offering</i><span><%= @place.lists.count %></span>
          </div>
          <div class="flex ml-3">
            <i class="material-icons mr-2">By: </i> <%= link_to @place.user.username, user_path(@place.user) %>
          </div>
        </div>
      </div>
      <div class="flat-show-card">
        <div class="flex-align">
          <div>
            <% if @place.user == current_user %>
  <h3>Dear: <%= @place.user.username %></h3>
  <%= link_to "MAKE A CLASSPASS for this EVENT",  new_list_path() %>
  <% else %>
            <h6 class="no-mb">Share</h6>
            <div class="flex">
              <i class="fa fa-facebook-square fa-2x mr-2"></i>
              <i class="fa fa-envelope-square fa-2x"></i>
  <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>



</div>

