<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Create your first list</h5>
      </div>
      <div class="modal-body">
        <%= simple_form_for(List.new) do |form| %>
        <%= form.input :name, as: :text, label: 'Name your Classpass:' %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn-info "><%= form.button :submit %></button>
        <% end %>
      </div>
    </div>
  </div>
</div>
